<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#edeff2"
    android:clipChildren="false"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:gravity="center">
        <ImageView
            android:scaleType="fitCenter"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/poster"
            />
        <LinearLayout
            android:orientation="vertical"
            android:background="#e8edec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="250dp">
            <android.support.v7.widget.RecyclerView
                android:orientation="horizontal"
                android:layout_marginTop="130dp"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/recyclerView">
            </android.support.v7.widget.RecyclerView>
            <LinearLayout
                android:paddingLeft="10dp"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="90dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Sathyam Cinemas: Royapettah"/>
            <android.support.v7.widget.RecyclerView
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/recyclerViewFilm">
            </android.support.v7.widget.RecyclerView>
            </LinearLayout>
            <LinearLayout
                android:paddingLeft="10dp"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="90dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="Escape Cinemas"/>
                <android.support.v7.widget.RecyclerView
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/recyclerViewFilm2">
                </android.support.v7.widget.RecyclerView>
            </LinearLayout>
            <LinearLayout
                android:paddingLeft="10dp"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="90dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="Cineplex Movies"/>
                <android.support.v7.widget.RecyclerView
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/recyclerViewFilm3">
                </android.support.v7.widget.RecyclerView>
            </LinearLayout>
        </LinearLayout>
        <ImageButton
            android:id="@+id/changeLayout"
            android:gravity="center_vertical"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="470dp"
            android:background="@drawable/button_next"
            android:scaleType="centerInside"
            android:src="@drawable/down2"
            android:tint="@android:color/white" />
        <LinearLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:background="@drawable/relative_layout_background"
            android:layout_marginTop="80dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="10dp"
                android:textColor="#000"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ant Man and the Wasp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="240dp"
                android:layout_height="20dp">
                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/star"
                        android:scaleType="fitXY"/>
                    <TextView
                        android:paddingLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="4.9"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="85dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/clock3"
                        android:scaleType="fitXY"/>
                    <TextView
                        android:paddingLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="111 mins"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="end"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/film"
                        android:scaleType="fitXY"/>
                    <TextView
                        android:paddingLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="IMAX 3D"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="25dp"
                android:background="#b7b8bc"/>
            <LinearLayout
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Synopsis"
                    android:textColor="#000" />
                <LinearLayout

                    android:gravity="end"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:textColor="#fff"
                        android:textAllCaps="false"
                        android:text="Action"
                        android:layout_margin="4dp"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/button"/>
                    <Button
                        android:textColor="#fff"
                        android:gravity="center_vertical"
                        android:textAllCaps="false"
                        android:textAlignment="center"
                        android:text="Adventure"
                        android:layout_margin="4dp"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/button"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:textColor="#9d9ea0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Scott Lang is grappling with the consequences of his choices as both a superhero and a father. Approached by Hope van Dyne and Dr. Hank Pym, Lang must once again don â€¦" />
            <ImageButton
                android:tint="@android:color/white"
                android:src="@drawable/down"
                android:scaleType="centerInside"
                android:gravity="center_vertical"
                android:layout_marginTop="12dp"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:background="@drawable/button"/>
        </LinearLayout>
    </RelativeLayout>




</ScrollView>